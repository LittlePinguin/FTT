<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_green"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewWifi"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/no_wifi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewWifi"
        android:layout_width="312dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:text="No internet !"
        android:textAlignment="center"
        android:textSize="12pt"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewWifi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Please check your connection."
        android:textAlignment="center"
        android:textSize="10pt"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewWifi" />

    <Button
        android:id="@+id/buttonRetry"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/button_retry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWifi2" />

</LinearLayout>